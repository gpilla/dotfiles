# cd
alias ..='cd ..'

# ls
alias ls='ls -F --color=auto'
alias l='ls -lAh --color=auto'
alias ll='ls -l --color=auto'
alias la='ls -A --color=auto'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias gcl='git clone'

alias c='clear'

alias update-grub-fedora='grub2-mkconfig -o /boot/grub2/grub.cfg'

alias mvn=mvn2
alias mvn-test='mvn -Dsurefire.useFile=false test'
