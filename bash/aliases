# cd
alias ..='cd ..'
alias ~='cd ~'

# ls
alias ls='ls -F --color=auto'
alias l='ls -lAGh --color=auto'
alias ll='ls -l --color=auto'
alias la='ls -A --color=auto'
alias lg='l | grep'

# git
alias gl='git log'
alias gp='git push'
alias gpo='git push origin'
alias gfo='git fetch origin'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit --amend'
alias gco='git checkout'
alias gb='git branch'
alias gm='git merge'
alias gs='git status'
alias gcl='git clone'
alias ga='git add'
alias gr='git rm'
alias gst='git stash'
alias gstl='git stash list'
alias gstp='git stash pop'

# SVN
alias clear-svn='rm -rf `find . -type d -name .svn`'
alias url-svn="svn info | sed -ne 's/URL: //p'"

alias c='clear'
alias r='source ~/.bashrc'

alias moreusedcommands=history | awk '{print $2}' | sort | uniq -c | sort -rn | head

alias update-grub-fedora='grub2-mkconfig -o /boot/grub2/grub.cfg'

alias mvn=mvn2
alias mvn-test='mvn -Dsurefire.useFile=false test'

alias process='ps fax | grep'
# TODO: ps faux | grep '[r]uby' for skipping the grep process itself
# cannot possible with alias, implement a function or python script

# Gedit
launch_gedit(){ gedit $@ & }
alias g=launch_gedit

# Nautilus
alias n='nautilus .'

# Firefox
alias f='firefox'
