export M2_REPO=$HOME/code/maven-repo
export JAVA_HOME=$HOME/software/jdk1.7.0_07
export SBT_HOME=$HOME/software/sbt
export MVN_HOME=$HOME/software/apache-maven-2.2.1
export JENKINS_HOME=$HOME/code/jenkins
export CABAL_HOME=$HOME/.cabal
export GEMSTONE=/opt/gemstone/product
 
export EDITOR=vim

export PATH=$CABAL_HOME/bin:$SBT_HOME/bin:$JAVA_HOME/bin:$HOME/scripts:$MVN_HOME/bin:$PATH

export _JAVA_OPTIONS="-Dswing.aatext=true -Dawt.useSystemAAFontSettings=on -Dswing.defaultlaf=com.sun.java.swing.plaf.gtk.GTKLookAndFeel"

# Load Gemstone/S environment
source /opt/gemstone/product/seaside/defSeaside

# RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
