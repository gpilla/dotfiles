# Common tools

_open_terminal_emulator() {
  gnome-terminal
}

_open_text_editor() {
  gnome-terminal -e vim
}

_open_primary_browser() {
  firefox
}

_open_secondary_browser() {
  chromium
}

_open_calculator() {
  gnome-calculator
}

_open_file_manager() {
  nautilus ~
}

_open_password_manager() {
  keepassx
}

# Screen/Brightness

_lock_screen() {
  xscreensaver-command --lock
}

_dim_brightness() {
  light -s 10
}

_aug_brightness() {
  light -a 10
}

# Music

_open_music_player() {
  sonata
}

_toggle_play_song() {
  sonata pp
}

_stop_song() {
  sonata stop
}

_prev_song() {
  sonata prev
}

_next_song() {
  sonata next
}
