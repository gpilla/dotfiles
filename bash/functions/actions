# Common tools

_open_terminal_emulator() {
  gnome-terminal
}

_open_text_editor() {
  gnome-terminal -e vim
}

# Screen/Brightness

_lock_screen() {
  xscreensaver-command --lock
}

_dim_brightness() {
  light -s 10
}

_aug_brightness() {
  light -a 10
}

# Music

_open_music_player() {
  sonata
}

_toggle_play_song() {
  mpc toggle
}

_stop_song() {
  mpc stop
}

_prev_song() {
  mpc prev
}

_next_song() {
  mpc next
}
