_mocp_toggle_play_pause() {
  case `mocp -Q %state` in
    STOP)  mocp --play         ;;
    PLAY)  mocp --toggle-pause ;;
    PAUSE) mocp --toggle-pause ;;
  esac
}

_mocp_now_playing() {
  if [ `mocp -Q %state` == STOP ]; then
    echo 'nothing'
  else
    mocp -Q "%song by %artist from %album"
  fi
}
